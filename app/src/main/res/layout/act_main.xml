<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
  tools:context="com.jazzyapps.oldschoolpokedex.ui.activities.ActMain">

  <android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/second_keyline"
    android:background="@color/red_dark"/>

  <LinearLayout
    android:id="@+id/ll_name_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_default"
    android:clickable="true">

    <TextView
      android:id="@+id/tv_name"
      android:layout_width="match_parent"
      android:layout_height="@dimen/list_item_height"
      android:gravity="center_vertical"
      android:text="Hello World"
      android:textAlignment="center"
      android:textColor="@color/display_text"
      android:textSize="@dimen/display_1"/>

  </LinearLayout>

</LinearLayout>
